<div id="<%= dom_id user %>">
  <p>
    <strong>Name:</strong>
    <%= user.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= user.email %>
  </p>

   <p>
    <strong>First Micropost:</strong>
    <% if user.microposts.any? %>
    <%= user.microposts.first.content %>
    <% else %>
      No microposts available.
    <% end %>
  </p>

</div>
